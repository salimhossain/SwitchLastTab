{
  "manifest_version": 3,
  "name": "Switch Last Tab",
  "version": "1.0",
  "description": "A Chrome extension to switch to the last used tab with a keyboard shortcut.",
  "permissions": ["tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "switch-last-tab": {
      "suggested_key": {
        "default": "Alt+Q",
        "windows": "Alt+Q",
        "mac": "Alt+Q",
        "chromeos": "Alt+Q",
        "linux": "Alt+Q"
      },
      "description": "Switch to the last active tab"
    }
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  }
}